{% block bodyPartOne %}
<body class=" login">

    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="index.html">
            <img src="{{ asset('bundles/Ui/pages/img/logo-big.png') }}" alt="" /> </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        <form class="login-form" action="{{ path('login') }}" method="post">
            <h3 class="form-title">{{ 'Login to your account'|trans }}</h3>
            <div class="alert alert-danger display-hide">
                <button class="close" data-close="alert"></button>
                <span> Enter any username and password. </span>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">{{ 'Username'|trans }}</label>
                <div class="input-icon">
                    <i class="fa fa-user"></i>
                    <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="{{ 'Username'|trans }}" name="_username" value="{{ username }}" /> </div>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">{{ 'Password'|trans }}</label>
                <div class="input-icon">
                    <i class="fa fa-lock"></i>
                    <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="{{ 'Password'|trans }}" name="_password" /> </div>
            </div>
            <div class="form-actions">
                <label class="checkbox">
                    <input type="checkbox" id="remember_me" name="_remember_me" /> {{ 'Remember me' | trans }} </label>
                <input type="hidden" name="csrf_security_token"
                       value="{{ csrf_token('login_csrf_token') }}"
                >
                <button type="submit" class="btn green pull-right"> {{ 'Login'|trans }} </button>
            </div>

            {% if error %}
            <div class="forget-password">
                <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
            </div>
            {% endif %}

        </form>
        <!-- END LOGIN FORM -->

    </div>

{% endblock %}

